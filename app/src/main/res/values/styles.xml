<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/DubaiGuideAppBarStyle</item>
    </style>

    <style name="SlidingTabs">
        <item name="tabTextColor">#ffffff</item>
        <item name="tabSelectedTextColor">#ffffff</item>
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="DubaiGuideAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <item name="elevation">0dp</item>
    </style>



</resources>
